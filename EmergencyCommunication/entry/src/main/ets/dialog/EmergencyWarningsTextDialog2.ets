@CustomDialog
export default struct EmergencyWarningsTextDialog2 {
  controller?: CustomDialogController;
  title?: Resource;
  confirmText?: Resource;

  @Builder
  initContent() {
  }

  @BuilderParam content: () => void = this.initContent;
  confirm: () => void = () => {
  };
  cancel: () => void = () => {
  };

  build() {
    Column() {
      Column() {
        Row() {
          Text(this.title)
            .fontSize($r('sys.float.ohos_id_text_size_headline8'))
            .fontColor($r('sys.color.ohos_id_color_text_primary'))
            .fontWeight(FontWeight.Bold)
            .height(26)
