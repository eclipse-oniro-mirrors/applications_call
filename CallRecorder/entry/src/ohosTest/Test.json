{
  "driver": {
    "type": "OHJSUnitTest",
    "test-timeout": "300000",
    "bundle-name": "com.ohos.callrecorder",
    "module-name": "entry_test",
    "shell-timeout": "600000",
    "testcase-timeout": 80000,
    "compile-mode": "esmodule",
    "coverage": true,
    "package-tool-path": "D:\\Local\\coverage2.0\\node_modules\\@ohos\\coverage"
  },
  "kits": [
    {
      "type": "ShellKit",
      "run-command": [
        "mount -o remount,rw /",
        "target mount",
        "chmod 777 system/app/CallRecorder/",
        "rm -rf /system/app/CallRecorder/*"
      ]
    },
    {
      "push": [
        "CallRecorder.hap->/system/app/CallRecorder/CallRecorder.hap"
      ],
      "type": "PushKit",
      "post-push": [
        "chmod 777 system/app/CallRecorder/CallRecorder.hap",
        "param set persist.bms.test-upgrade true",
        "sync",
        "/system/bin/udevadm trigger",
        "reboot"
      ]
    },
    {
      "push": [
        "CallRecorderTest.hap->/data/local/tmp/CallRecorderTest.hap"
      ],
      "type": "PushKit",
      "post-push": [
        "bm install -p /data/local/tmp/CallRecorderTest.hap"
      ]
    },
    {
      "type": "ShellKit",
      "run-command": [
        "mount -o remount,rw /",
        "target mount",
		"power-shell wakeup",
        "uinput -T -m 540 1752 540 751 500",
        "power-shell setmode 602"
      ],
      "teardown-command":[
        "power-shell setmode 600"
      ]
    }
  ]
}