{
  "description": "Configuration for demo Tests",
  "driver": {
    "type": "OHJSUnitTest",
    "test-timeout": "180000",
    "bundle-name": "com.ohos.callui",
    "module-name": "callui_test",
    "shell-timeout": "600000",
    "testcase-timeout": "30000",
    "compile-mode": "esmodule",
    "coverage": true,
    "package-tool-path": "D:\\Local\\coverage2.0\\node_modules\\@ohos\\coverage"
  },
  "kits": [
    {
      "type": "ShellKit",
      "run-command": [
        "mount -o remount,rw /",
        "target mount",
        "rm -rf /system/app/CallUI/*"
      ]
    },
    {
      "push": [
        "call.hap->/system/app/CallUI/CallUI.hap"
      ],
      "type": "PushKit",
      "post-push": [
        "param set persist.bms.test-upgrade true",
        "sync",
        "/system/bin/udevadm trigger",
        "reboot"
      ]
    },
    {
      "push": [
        "callTest.hap->/data/local/tmp/CallUITest.hap"
      ],
      "type": "PushKit",
      "post-push": [
        "bm install -p /data/local/tmp/CallUITest.hap"
      ]
    }
  ]
}